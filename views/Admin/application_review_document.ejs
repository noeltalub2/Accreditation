                                    <option value="One Year College" <%=application.qualification==='One Year College'
                                        ? 'selected' : '' %>>One Year College</option>
                                    <option value="Two Years College" <%=application.qualification==='Two Years College'
                                        ? 'selected' : '' %>>Two Years College/Graduate of Vocational/Technical Course
                                        of two years</option>
                                    <option value="Three Years College"
                                        <%=application.qualification==='Three Years College' ? 'selected' : '' %>>Three
                                        Years College</option>
                                    <option value="College Degree Holder"
                                        <%=application.qualification==='College Degree Holder' ? 'selected' : '' %>
                                        >College Degree Holder</option>
                                </select>
                            </div>

                            <!-- Name of School -->
                            <div class="mb-3">
                                <label for="school_name" class="form-label">Name of School</label>
                                <input type="text" class="form-control" id="school_name" name="school_name"
                                    value="<%= application.school_name || '' %>" required>
                            </div>

                            <!-- Address of School -->
                            <div class="mb-3">
                                <label for="school_address" class="form-label">Address of School</label>
                                <input type="text" class="form-control" id="school_address" name="school_address"
                                    value="<%= application.school_address || '' %>" required>
                            </div>

                            <!-- Date First Attended -->
                            <div class="mb-3">
                                <label for="date_first_attended" class="form-label">Date First Attended</label>
                                <input type="date" class="form-control" id="date_first_attended"
                                    name="date_first_attended" value="<%= new Date(application.date_first_attended).toLocaleDateString('en-CA') || '' %>"
                                    required>
                            </div>

                            <!-- Date Last Attended -->
                            <div class="mb-3">
                                <label for="date_last_attended" class="form-label">Date Last Attended</label>
                                <input type="date" class="form-control" id="date_last_attended"
                                    name="date_last_attended" value="<%= new Date(application.date_last_attended).toLocaleDateString('en-CA') || '' %>"
                                    required>
                            </div>

                            <!-- Copy of TOR/Form 137 -->
                            <div class="mb-3">
                               
                                <p class="fw-bold mb-1">Uploaded documents: TOR or Form 137</p>

                                <% if (application.tor_file) { %>
                                    <div class="card mb-2 shadow-none border">
                                        <div class="p-1">
                                            <div class="row align-items-center">
                                                <div class="col-auto">
                                                    <div class="avatar-sm">
                                                        <span class="avatar-title rounded" style="background-color: #f7473a;">
                                                            PDF
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="col ps-0">
                                                    <a href="/uploads/<%=application.tor_file%>" class="text-muted fw-bold">
                                                        <%=application.tor_file%>
                                                    </a>
                                                </div>
                                                <div class="col-auto" id="tooltip-container">
                                                    <!-- Download Button -->
                                                    <a href="/uploads/<%=application.tor_file%>"
                                                        data-bs-container="#tooltip-container"
                                                        data-bs-toggle="tooltip" data-bs-placement="bottom"
                                                         aria-label="Download"
                                                        data-bs-original-title="Download" class="btn btn-link fs-16 text-muted" download>
                                                        <i class="ri-download-line"></i>
                                                    </a>
            
                                                   
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <%}%>
                            </div>

                            <h4>IV. Work Experiences</h4>
                       

