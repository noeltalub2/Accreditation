                                </select>
                            </div>

                            <!-- Name of School -->
                            <div class="mb-3">
                                <label for="school_name" class="form-label">Name of School</label>
                                <input type="text" class="form-control" id="school_name" name="school_name"
                                    value="<%= application.school_name || '' %>" required>
                            </div>

                            <!-- Address of School -->
                            <div class="mb-3">
                                <label for="school_address" class="form-label">Address of School</label>
                                <input type="text" class="form-control" id="school_address" name="school_address"
                                    value="<%= application.school_address || '' %>" required>
                            </div>

                            <!-- Date First Attended -->
                            <div class="mb-3">
                                <label for="date_first_attended" class="form-label">Date First Attended</label>
                                <input type="date" class="form-control" id="date_first_attended"
